<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.coursemanagementsystem.controller.TambahTugasController"
      spacing="20" 
      styleClass="form-container"
      prefWidth="500"
      prefHeight="600">

    <!-- Header -->
    <VBox spacing="8">
        <Label text="Tambah Tugas Baru" styleClass="form-title" />
        <Label text="Isi detail tugas yang akan ditambahkan" styleClass="label-muted" />
        <Separator />
    </VBox>

    <!-- Form Fields -->
    <VBox spacing="16">
        <!-- Judul Tugas -->
        <VBox spacing="6">
            <Label text="Judul Tugas *" style="-fx-font-weight: bold; -fx-text-fill: #374151;" />
            <TextField fx:id="txtJudul" promptText="Masukkan judul tugas" styleClass="text-field" />
        </VBox>

        <!-- Deskripsi -->
        <VBox spacing="6">
            <Label text="Deskripsi" style="-fx-font-weight: bold; -fx-text-fill: #374151;" />
            <TextArea fx:id="txtDeskripsi" promptText="Masukkan deskripsi tugas (opsional)" 
                     prefRowCount="3" wrapText="true" />
        </VBox>

        <!-- Row 1: Deadline dan Prioritas -->
        <HBox spacing="16">
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Deadline *" style="-fx-font-weight: bold; -fx-text-fill: #374151;" />
                <DatePicker fx:id="datePicker" promptText="Pilih tanggal deadline" 
                           styleClass="date-picker" maxWidth="Infinity" />
            </VBox>
            
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Prioritas *" style="-fx-font-weight: bold; -fx-text-fill: #374151;" />
                <ComboBox fx:id="cbPrioritas" promptText="Pilih prioritas" 
                         styleClass="combo-box" maxWidth="Infinity" />
            </VBox>
        </HBox>

        <!-- Row 2: Mata Kuliah dan Tipe -->
        <HBox spacing="16">
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Mata Kuliah *" style="-fx-font-weight: bold; -fx-text-fill: #374151;" />
                <TextField fx:id="txtMataKuliah" promptText="Contoh: Pemrograman Java" 
                          styleClass="text-field" />
            </VBox>
            
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Tipe Tugas *" style="-fx-font-weight: bold; -fx-text-fill: #374151;" />
                <ComboBox fx:id="cbTipe" promptText="Pilih tipe" 
                         styleClass="combo-box" maxWidth="Infinity" />
            </VBox>
        </HBox>
    </VBox>

    <!-- Spacer -->
    <Region VBox.vgrow="ALWAYS" />

    <!-- Action Buttons -->
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button fx:id="btnBatal" text="Batal" styleClass="cancel-btn" prefWidth="100" />
        <Button fx:id="btnSimpan" text="Simpan" styleClass="primary-btn" prefWidth="100" />
    </HBox>
</VBox>